    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "theatre/back_to_the_future.jpg", class: "d-block w-100", alt: "First slide" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "theatre/book_of_mormon.jpg", class: "d-block w-100", alt: "Second slide" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "theatre/come_from_away.jpg", class: "d-block w-100", alt: "Third slide" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "theatre/ferryman.jpg", class: "d-block w-100", alt: "Fourth slide" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "theatre/harry_potter.jpg", class: "d-block w-100", alt: "Fifth slide" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "theatre/matilda.jpg", class: "d-block w-100", alt: "Sixth slide" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "theatre/nutcracker.jpg", class: "d-block w-100", alt: "Seventh slide" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "theatre/strictly_ballroom.jpg", class: "d-block w-100", alt: "Eighth slide" %>
      </div>
    </div>
